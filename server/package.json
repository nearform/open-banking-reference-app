{
  "name": "nearform-banco-backend",
  "version": "0.0.1",
  "private": true,
  "main": "index.ts",
  "homepage": "https://nearform.github.io/nf-banco-app/",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "^6.0.1",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^6.0.0",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "fastify": "^2.15.1",
    "fastify-cors": "^2.2.0",
    "got": "^9.6.0",
    "hapi-pino": "^6.5.0",
    "hapi-swagger": "^13.0.0",
    "ibm-watson": "^5.5.0",
    "qs": "^6.9.3",
    "uuid": "^3.4.0"
  },
  "scripts": {
    "build": "tsc --build",
    "start": "ts-node ./index.ts",
    "start:dev": "ts-node ./index.ts",
    "lint": "tsc --project . && tslint -p .",
    "test": "npm run prettier:check:all && npm run lint && jest --coverage --verbose --passWithNoTests",
    "test:watch": "jest --watch --verbose",
    "typecheck": "tsc -p tsconfig.json --noEmit true",
    "prettier": "prettier --write **/*.ts",
    "prettier:check": "prettier --list-different",
    "prettier:check:all": "prettier --list-different **/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/got": "^9.6.10",
    "@types/hapi-pino": "^6.4.0",
    "@types/hapi__hapi": "^18.2.6",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.35",
    "@types/qs": "^6.9.1",
    "@types/uuid": "^3.4.8",
    "dotenv-expand": "^5.1.0",
    "husky": "^3.1.0",
    "jest": "^25.3.0",
    "lint-staged": "^9.5.0",
    "pino-pretty": "^4.0.0",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.8.3"
  }
}
